      // Add new images to the appropriate category
      updatedFiles[imageCategory] = [
        ...prevFiles[imageCategory], 
        ...uploadedImages
      ];
      
      console.log(`Updated imageFiles state: ${imageCategory} category now has ${updatedFiles[imageCategory].length} images`);
      return updatedFiles;
